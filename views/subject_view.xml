<odoo>
    <data>

        <record id="subject_list_view" model="ir.ui.view">
            <field name="name">school_subject_list</field>
            <field name="model">subject.school</field>
            <field name="arch" type="xml">
                <list>

                    <field name="name"/>
                    <field name="code"/>
                    <field name="teacher_ids" widget="many2many_tags"/>
                    <field name="class_ids" widget="many2many_tags"/>
                </list>
            </field>
        </record>


        <record id="subject_form_view" model="ir.ui.view">
            <field name="name">school_subject_form</field>
            <field name="model">subject.school</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="teacher_ids" widget="many2many_tags"/>
                            <field name="class_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_subject" model="ir.actions.act_window">
            <field name="name">Subjects</field>
            <field name="res_model">subject.school</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="subject_school" name="Subjects" sequence="6" action="action_subject" parent="school_menu_root"/>

    </data>
</odoo>