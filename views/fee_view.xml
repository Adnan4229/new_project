<odoo>


        <record id="school_fee_list_view" model="ir.ui.view">
            <field name="name">fee.school.list</field>
            <field name="model">fee.school</field>
            <field name="arch" type="xml">
                <list>
                    <field name="student_id"/>
                    <field name="month"/>
                    <field name="amount"/>
                    <field name="state"/>
                </list>
            </field>
        </record>


        <record id="school_fee_form_view" model="ir.ui.view">
            <field name="name">fee.school.form</field>
            <field name="model">fee.school</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="student_id"/>
                            <field name="month"/>
                            <field name="amount"/>
                        </group>
                    </sheet>

                </form>
            </field>
        </record>


        <record id="school_fee_action" model="ir.actions.act_window">
            <field name="name">Fees</field>
            <field name="res_model">fee.school</field>
            <field name="view_mode">list,form</field>
        </record>


        <menuitem
            id="menu_school_fee"
            name="Fees"
            parent="school_menu_root"
            action="school_fee_action"
            sequence="9"/>


</odoo>
