<odoo>
    <data>

        <record id="attendance_form_view" model="ir.ui.view">
            <field name="name">school.attendance.form</field>
            <field name="model">attendance.school</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="date"/>
                            <field name="student_id"/>
                            <field name="class_id"/>
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="attendance_list_view" model="ir.ui.view">
            <field name="name">school.attendance.list</field>
            <field name="model">attendance.school</field>
            <field name="arch" type="xml">
                <list>
                    <field name="date"/>
                    <field name="student_id"/>
                    <field name="class_id"/>
                    <field name="status"/>
                </list>
            </field>
        </record>

        <record id="action_attendance" model="ir.actions.act_window">
            <field name="name">Attendance</field>
            <field name="res_model">attendance.school</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="attendance_school" name="Attendance" sequence="6"
                  action="action_attendance" parent="school_menu_root"/>
    </data>
</odoo>
