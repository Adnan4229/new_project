<odoo>
    <data>
        <record id="teacher_school_view_tree" model="ir.ui.view">
            <field name="name">teacher.school.tree</field>
            <field name="model">teacher.school</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="subject_ids"/>
                    <field name="qualification"/>
                    <field name="experience"/>
                    <field name="join_date"/>
                    <field name="service_date"/>
                </list>
            </field>
        </record>

        <record id="teacher_school_view_form" model="ir.ui.view">
            <field name="name">teacher.school.form</field>
            <field name="model">teacher.school</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Personal Information">
                            <field name="name"/>
                            <field name="subject_ids" widget="many2many_tags"/>
                            <field name="qualification"/>
                            <field name="experience"/>
                            <field name="join_date"/>
                            <field name="service_date"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="teacher_action" model="ir.actions.act_window">
            <field name="name">Teachers</field>
            <field name="res_model">teacher.school</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="teacher_school" name="Teachers" sequence="2" action="teacher_action" parent="school_menu_root"/>
    </data>
</odoo>
